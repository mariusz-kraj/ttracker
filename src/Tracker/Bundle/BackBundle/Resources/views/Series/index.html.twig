{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Lista sledzonych seriali</h1>

    <table class="records_list table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:5%;">Id</th>
                <th style="width:15%;">Nazwa</th>
                <th style="width:40%;">Opis</th>
                <th style="width:20%;">Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('series_show', { 'id': entity.id }) }}">{{ loop.index }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>
                    <a href="{{ path('series_show', { 'id': entity.id }) }}">
                        <i class="icon-search"></i> Podglad
                    </a>
                    <a href="{{ path('series_edit', { 'id': entity.id }) }}">
                        <i class="icon-pencil" ></i> Edytuj
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('series_new') }}" class="btn btn-info">
        <i class="icon-plus"></i>Dodaj nowy serial
    </a>
 {% endblock %}
