<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    <fieldset>
        <div class="row-fluid">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'span12'}}) }}
        </div>
        <div class="row-fluid">
            {{ form_label(form.username) }}
            {{ form_widget(form.username, {'attr': {'class': 'span12'}}) }}
        </div>
        <div class="row-fluid">
            {{ form_label(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'span12'}}) }}
        </div>
        <div class="row-fluid">
            {{ form_label(form.plainPassword.second) }}
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'span12'}}) }}
        </div>
    <br />
      <div>
          <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class='btn btn-primary' />
      </div>
    </fieldset>
</form>